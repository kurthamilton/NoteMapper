@*Mobile nav*@
<BSNavbar Class="d-sm-none" Color="BSColor.Dark" IsDark="true" Expand="Size.Small">
    <BSContainer>
        <BSNavbarBrand Url="/">Note Mapper</BSNavbarBrand>
        <BSCollapse IsInNavbar="true">
            <Toggler>
                <BSNavbarToggle />
            </Toggler>            
            <Content>
                <BSNav>
                    <AuthorizeView>
                        <Authorized>
                            <BSNavItem Url="/instruments">Instruments</BSNavItem>
                        </Authorized>
                    </AuthorizeView>
                    <BSNavItem Url="/about">About</BSNavItem>
                    <BSNavItem Url="/contact">Contact</BSNavItem>

                    <AccountNav IsMobile="true" />
                </BSNav>
            </Content>
        </BSCollapse>
    </BSContainer>
</BSNavbar>

@*Desktop nav*@
<BSNavbar Class="d-none d-sm-flex" Color="BSColor.Dark" IsDark="true" Expand="Size.Small">
    <BSContainer Container="Fluid ? Container.ExrtaLarge : Container.Default" Class="@ContainerClass">
        <BSNavbarBrand Url="/">Note Mapper</BSNavbarBrand>
        <BSNav MarginEnd="Margins.Auto">
            <AuthorizeView>
                <Authorized>
                    <BSNavItem Url="/instruments">Instruments</BSNavItem>
                </Authorized>
            </AuthorizeView>
            <BSNavItem Url="/about">About</BSNavItem>
            <BSNavItem Url="/contact">Contact</BSNavItem>
        </BSNav>

        <AccountNav IsMobile="false" />
    </BSContainer>
</BSNavbar>

@code{
    [Parameter]
    public string? ContainerClass { get; set; }

    [Parameter]
    public bool Fluid { get; set; } = true;    
}