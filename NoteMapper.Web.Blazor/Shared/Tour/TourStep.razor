<div data-nm-tour-step-target="@Target"
     data-nm-tour-step-title="@Title"
     data-nm-tour-step-message="@Message"
     data-nm-tour-step-arrow="@(HideArrow ? "false" : null)"
     data-nm-tour-step-selector="@Selector">
    @ChildContent
</div>

@code {
    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool HideArrow { get; set; }

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public string? Selector { get; set; }

    [Parameter]
    public string? Target { get; set; }

    [Parameter]
    public string? Title { get; set; }     
}
