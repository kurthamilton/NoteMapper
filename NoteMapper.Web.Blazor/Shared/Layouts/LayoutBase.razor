@using NoteMapper.Web.Blazor.Shared.Structure
@inherits LayoutComponentBase

<PageTitle>Note Mapper</PageTitle>

<div class="page">
    <header>
        <Navbar Fluid="@Fluid" ContainerClass="@ContainerClass" />
    </header>
    <main>
        <div class="@(Fluid ? "container-fluid" : "container") @ContainerClass">
            <article class="content">
                @ChildContent
            </article>
        </div>
    </main>
</div>

@code {
    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? ContainerClass { get; set; }

    [Parameter]
    public bool Fluid { get; set; } = true;    
}