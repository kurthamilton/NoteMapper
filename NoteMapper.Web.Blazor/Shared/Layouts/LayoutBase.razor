@using NoteMapper.Web.Blazor.Shared.Structure
@inherits LayoutComponentBase

<PageTitle>Note Mapper</PageTitle>

<div class="page">
    <header>
        <Navbar Fluid="@Fluid" Class="@NavClass" />
    </header>
    <main>
        <article class="content px-4">
            <div class="@(Fluid ? "" : "container")">
                @ChildContent
            </div>
        </article>
    </main>
</div>

@code {
    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Fluid { get; set; } = true;

    [Parameter]
    public string? NavClass { get; set; }
}